<div class="card shadow-sm mb-4">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Phản hồi từ người dùng</h5>
        <button class="btn btn-success btn-sm">Xem tất cả</button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>MSSV</th>
                        <th>Đánh giá</th>
                        <th>Bình luận</th>
                        <th>Thời gian</th>
                    </tr>
                </thead>
                <tbody>
                    <% feedback.forEach(fb=> { %>
                        <tr>
                            <td>
                                <%= fb.feedback_id %>
                            </td>
                            <td>
                                <%= fb.mssv %>
                            </td>
                            <td>
                                <% const ratingText=[ "Không xác định" , "Không tốt" , "Tạm" , "Tốt" , "Rất tốt"
                                    , "Tuyệt vời" ]; %>
                                    <%= ratingText[parseInt(fb.rating)] %>
                            </td>
                            <td>
                                <%= fb.comment %>
                            </td>
                            <td>
                                <%= new Date(fb.Time).toLocaleString() %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>